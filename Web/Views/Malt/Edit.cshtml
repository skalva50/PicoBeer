@model PicoBeer.Domain.Malt

@{
    ViewData["Title"] = Localizer["Edit"];
}

<h2>@Localizer["Edit"]</h2>

<h4>@Localizer["Test"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">@Localizer["Name"]</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">@Localizer["Description"]</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ebc" class="control-label">@Localizer["Ebc"]</label>
                <input asp-for="Ebc" class="form-control" />
                <span asp-validation-for="Ebc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExtractFactor" class="control-label">@Localizer["ExtractFactor"]</label>
                <input asp-for="ExtractFactor" class="form-control" />
                <span asp-validation-for="ExtractFactor" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="@Localizer["Save"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Localizer["BackToList"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
