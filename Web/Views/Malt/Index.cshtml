@model IEnumerable<PicoBeer.Domain.Malt>

@{
    ViewData["Title"] = Localizer["ListMalt"];
}
<div class="row">
    <h2>@Localizer["ListMalt"]</h2>
</div>
<div class="row">
<p>
    <a asp-action="Create">@Localizer["CreateMalt"]</a>
</p>
</div>
<div class="row">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">
                    Id
                </th>
                <th scope="col">
                    @Localizer["Name"]
                </th>
                <th scope="col">
                    @Localizer["Description"]
                </th>
                <th scope="col">
                    @Localizer["Ebc"]
                </th>
                <th scope="col">
                    @Localizer["ExtractFactor"]
                </th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <th scope="row">
                    @Html.DisplayFor(modelItem => item.Id)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ebc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExtractFactor)
                </td>                                
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">@Localizer["Edit"]</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">@Localizer["Details"]</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">@Localizer["Delete"]</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>