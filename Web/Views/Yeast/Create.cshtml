@model PicoBeer.Domain.Yeast

@{
    ViewData["Title"] = Localizer["CreateYeast"];
}

<h2>@Localizer["CreateYeast"]</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">@Localizer["Name"]</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">@Localizer["Description"]</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Attenuation" class="control-label">@Localizer["Attenuation"]</label>
                <input asp-for="Attenuation" class="form-control" />
                <span asp-validation-for="Attenuation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer["CreateYeast"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Localizer["BackToList"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
